@using MvcStock.Models.Entity
@model List<TBL_Products>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered" id="tbl1">
    <thead>
        <tr>
            <th>Product ID</th>
            <th>Product Name</th>
            <th>Marka</th>
            <th>Product Category</th>
            <th>Cost</th>
            <th>Stock</th>
            <th>Delete</th>
            <th>Update</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var prdct in Model)
        {
            <tr>
                <th>@prdct.ProductID</th>
                <td>@prdct.ProductName</td>
                <td>@prdct.Marka</td>
                <td>@prdct.TBL_Categories.CategoryName</td>
                <td>@prdct.Cost</td>
                <td>@prdct.Stock</td>
                <td><a href="/Product/Delete/@prdct.ProductID" class="btn btn-danger">Delete</a></td>
                <td><a href="/Product/ReturnProduct/@prdct.ProductID" class="btn btn-success">Update</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/Product/NewProduct" class="btn btn-primary">Add product</a>
<script type="text/javascript" src="https://cdn.datatables.net/v/bs-3.3.7/jq-2.2.4/jszip-3.1.3/pdfmake-0.1.27/dt-1.10.15/b-1.3.1/b-colvis-1.3.1/b-flash-1.3.1/b-html5-1.3.1/b-print-1.3.1/r-2.1.1/sc-1.4.2/se-1.2.2/datatables.min.js"></script>
<link href="~/Content/DataTables/css/dataTables.material.min.css" rel="stylesheet" />
<script>
    $('#tbl1').DataTable();
</script>